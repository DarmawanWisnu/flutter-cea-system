@startuml
scale 3
skinparam monochrome true
skinparam defaultFontSize 20
title Activity Diagram - Add Kit

|User|
start
:Akses halaman Add Kit;

|Sistem|
:Menampilkan form input Kit;

|User|
:Input ID kit;
:Input nama kit;
:Klik tombol Simpan;

|Sistem|
:Validasi data input;

if ("Data valid?") then (Ya)
  :Kirim request ke Backend API;
  :POST /kits {id, name, userId};
  
  if ("Request berhasil?") then (Ya)
    :Menampilkan Dialog Sukses;
    :Navigate ke Home Screen;
    stop
  else (Tidak)
    :Menampilkan Dialog Error;
    :(ID Kit sudah terdaftar / network error);
    :Kembali ke form Add Kit;
  endif
else (Tidak)
  :Menampilkan pesan kesalahan validasi;
  :(ID < 5 char atau nama kosong);
  :Kembali ke form Add Kit;
endif
@enduml
