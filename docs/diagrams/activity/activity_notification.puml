@startuml
title Activity Diagram - Notification

|User|
start
:Akses halaman Notification;

|Sistem|
:Request daftar notifikasi dari Backend API;
:GET /notifications?userId={userId}&kitId={kitId};

if ("Ada notifikasi?") then (Ya)
  :Menampilkan daftar notifikasi di UI;
  :Grouped by level (Info, Warning, Urgent);
else (Tidak)
  :Menampilkan pesan "Tidak ada notifikasi";
endif

|User|
:Melihat daftar notifikasi;
:Pilih filter (All / Warning / Urgent);

|Sistem|
:Filter notifikasi berdasarkan level;
:Menampilkan hasil filter;

|User|
if ("User tap salah satu notifikasi?") then (Ya)
  :Menampilkan detail notifikasi;
  
  |Sistem|
  :Mark notifikasi sebagai telah dibaca;
  :PATCH /notifications/{id} {isRead: true};
  :Update tampilan status baca;
  
  |User|
  if ("Notifikasi terkait waktu tertentu?") then (Ya)
    :Tap "Lihat di History";
    
    |Sistem|
    :Navigate ke History Screen;
    :Dengan parameter targetTime;
  endif
endif

stop
@enduml
