@startuml
scale 3
skinparam monochrome true
title Activity Diagram - Notification

|User|
start
:Akses halaman Notification;

|Sistem|
:Load notifikasi dari Backend API;
:GET /notifications?userId={userId};

if ("Ada notifikasi?") then (Ya)
  :Menampilkan daftar notifikasi;
  :Grouped by level (Info, Warning, Urgent);
else (Tidak)
  :Menampilkan "Tidak ada notifikasi";
endif

|User|
:Pilih filter (All / Warning / Urgent);

|Sistem|
:Filter notifikasi berdasarkan level;
:Tampilkan hasil filter;

|User|
if ("User tap notifikasi?") then (Ya)
  |Sistem|
  :Mark as read;
  :PUT /notifications/{id}/read;
  
  |User|
  if ("Ada link ke History?") then (Ya)
    :Tap "Lihat di History";
    
    |Sistem|
    :Navigate ke History Screen;
    :Dengan parameter targetTime;
  endif
endif

stop
@enduml
