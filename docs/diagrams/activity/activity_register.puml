@startuml
title Activity Diagram - Register

|User|
start
:Akses halaman register;

|Sistem|
:Menampilkan form register;

|User|
:Input email dan password;
:Input konfirmasi password;
:Klik tombol Register;

|Sistem|
:Validasi format input;

if ("Format valid?") then (Ya)
  if ("Password match?") then (Ya)
    :Kirim request ke Firebase Auth;
    :createUserWithEmailAndPassword();
    
    if ("Registrasi berhasil?") then (Ya)
      :Kirim email verifikasi;
      :sendEmailVerification();
      :Menampilkan notifikasi "Registrasi berhasil";
      :Navigate ke Verify Screen;
      stop
    else (Tidak)
      :Menampilkan pesan error;
      :(Email sudah terdaftar / password lemah);
      :Kembali ke form register;
    endif
  else (Tidak)
    :Menampilkan pesan "Password tidak cocok";
    :Kembali ke form register;
  endif
else (Tidak)
  :Menampilkan pesan "Format email tidak valid";
  :Kembali ke form register;
endif
@enduml
